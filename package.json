{
  "name": "rescript-jest",
  "version": "0.8.0",
  "description": "Rescript bindings to the Jest testing framework derived from GLenn Sloate's bs-jest package",
  "author": "RatoonCorp",
  "license": "MIT",
  "scripts": {
    "build": "rescript build -with-deps",
    "clean": "rescript clean",
    "start": "rescript build -w",
    "jest": "jest",
    "test": "yarn build && jest",
    "test-ci": "yarn build && jest --coverage --coverageDirectory='coverage'",
    "watch:bsb": "rescript build -with-deps -w",
    "watch:jest": "jest --coverage --watchAll",
    "watch:screen": "screen -c .screenrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sacarr/rescript-jest/"
  },
  "keywords": [
    "ReScript",
    "jest",
    "test"
  ],
  "bugs": {
    "url": "https://github.com/sacarr/rescript-jest/"
  },
  "homepage": "https://github.com/sacarr/rescript-jest/#readme-rescript",
  "files": [
    "src/",
    "bsconfig.json"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-jest": "^27.3.1",
    "rescript": "^9.1.4"
  },
  "dependencies": {
    "jest": "^27.3.1"
  }
}
